# Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# For Production (Render/Heroku): Set these environment variables to prevent settings reset
# XWeather API Configuration
API_PROVIDER=xweather
API_BASE_URL=https://data.api.xweather.com
API_CLIENT_ID=your_xweather_client_id_here
API_CLIENT_SECRET=your_xweather_client_secret_here

# Webhook Configuration
WEBHOOK_URL=your_webhook_url_here
WEBHOOK_PROVIDER=webhook.site

# Scheduler Configuration
SCHEDULE_FREQUENCY=15
SCHEDULE_ENABLED=true

# System Configuration
MAX_LOGS_TO_KEEP=100

# Optional: OpenWeatherMap API (if using that provider instead)
# API_KEY=your_openweathermap_api_key_here
